<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
    </div>
    <div class='col-md-8 offset-md-1'>
      <div class="search-form">
        <% if user_signed_in? %>
          <%= form_tag search_path, method: :get do %>
            <%= text_field_tag 'content' %>
            <%= select_tag 'model', options_for_select({"User" => "user", "Book" => "book"}) %>
            <%= select_tag 'method', options_for_select({"完全一致" => "perfect", "前方一致" => "front", "後方一致" => "back", "部分一致" => "partial"}) %>
            <%= submit_tag '検索' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>